#!/bin/bash


export MACOSX_DEPLOYMENT_TARGET=10.9
export GOPATH=$HOME/go
export PATH="/usr/local/opt/ruby/bin:$PATH"
export PATH="/usr/local/PEAR:$PATH"
export PATH="/usr/local/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"
export PATH="/usr/local/Cellar/mysql/5.1.54/bin:$PATH"
export PATH="/Users/smergler/android/sdk/platform-tools:$PATH"
export PATH="/usr/local/opt/gettext/bin:$PATH"
export PATH="/Users/smergler/bin:$PATH"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

# Make vim the default editor
export EDITOR="vim"
# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups

# timestamps for bash history. www.debian-administration.org/users/rossen/weblog/1
# saved for later analysis
HISTTIMEFORMAT='%F %T '
export HISTTIMEFORMAT

#GROOVY
export GROOVY_PATH='/Applications/groovy'
export PATH=$GROOVY_PATH/bin:$PATH

#GRAILS
export GRAILS_PATH='/Applications/grails-1.1.1'
export PATH=$GRAILS_PATH/bin:$PATH

#Android SDK
export ANDROID_SDK_ROOT='~/android'
export PATH=$ANDROID_SDK_ROOT/tools:$PATH

export PYTHONPATH="/usr/local/lib/python2.6/site-packages:$PYTHONPATH"
export LOCAL_BIN_ROOT='~/bin';


export GEM_PATH='~/.gem/ruby/1.8/bin';
export PATH=$GEM_PATH:$PATH;
export NODE_PATH='/usr/local/lib/node':'/usr/local/lib/node_modules':$NODE_PATH;


#ruby on rails stuff
#[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # Load RVM function

export PHP_AUTOCONF=/usr/local/bin/autoconf;

#homebrew exports
#set cask to install in /Applications
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Add Visual Studio Code (code)
export PATH=$PATH:/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/

