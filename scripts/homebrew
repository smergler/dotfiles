#!/bin/sh
#
# Homebrew
#
# This installs php with a few extra kicks that I personally like/use
#   and taps certain repos that I need
#
brew update
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
brew install apple-gcc42
echo "Donâ€™t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

brew tap homebrew/dupes
brew install homebrew/dupes/grep
brew tap josegonzalez/homebrew-php
brew install dos2unix libmemcached nginx readline bash-completion mcrypt \
   node redis git memcached mongodb jsl phantomjs graphicsmagick jsmin \
    multitail unrar p7zip
brew install php54 --with-fpm --with-mysql --without-pear
brew install php54-mongo php54-memcached php54-memcache php54-apc php54-mcrypt \
  php54-redis php54-xdebug php54-xhprof phplint ack tmux php54-yaml \
  php54-igbinary v8 php54-oauth
pecl install v8js-beta
pecl install -f ssh2


brew install ffmpeg --with-openssl --with-jpeg --with-tools --with-libvorbis
brew install youtube-dl

curl http://python-distribute.org/distribute_setup.py | sudo python
curl https://raw.github.com/pypa/pip/master/contrib/get-pip.py | python
sudo pip install --upgrade fabric pssh

sudo npm install grunt
sudo npm install -g bbb

# Install everything else
brew install ack rename tree


# install cask, chrome, and quick look extensions
brew tap phinze/homebrew-cask
brew install brew-cask
brew cask install google-chrome
brew cask install qlcolorcode qlstephen qlmarkdown quicklook-json qlprettypatch \
    quicklook-csv betterzipql webp-quicklook suspicious-package && qlmanage -r


# Remove outdated versions from the cellar
#brew cleanup

